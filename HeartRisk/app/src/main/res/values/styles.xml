<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Popup Overlay için stil -->
    <style name="AppTheme.PopupOverlay">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Toolbar için stil -->
    <style name="AppTheme.Toolbar">
        <item name="android:background">#3F51B5</item> <!-- Mavi renk -->
        <item name="android:titleTextColor">#FFFFFF</item> <!-- Beyaz başlık metni -->
        <item name="android:subtitleTextColor">#FFFFFF</item> <!-- Beyaz alt başlık metni -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
