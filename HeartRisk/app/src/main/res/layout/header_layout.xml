<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:paddingTop="0dp"
    app:elevation="0dp"
    android:theme="@style/AppTheme.Toolbar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/my_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/AppTheme.Toolbar">

        <RelativeLayout
            android:background="@color/my_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <!-- Header'da resmin yer alacağı ImageView -->
            <ImageView
                android:id="@+id/accessibility_custom_action_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/kalpicon" />

            <!-- Başlık metnini tutacak TextView -->
            <TextView
                android:background="@color/my_blue"
                android:id="@+id/accessibility_custom_action_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:text="HeartRisk"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <!-- Google Sign-In Butonu -->
            <Button
                android:id="@+id/google_sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Sign in with Google"
                android:visibility="gone" /> <!-- Giriş yapılmadığında görünür -->

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>
